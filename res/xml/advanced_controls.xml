<?xml version="1.0" encoding="utf-8"?>

<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="@string/advanced_controls_title"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings">

    <!-- Active display -->	
    <PreferenceScreen
        android:icon="@drawable/ic_screen_state"    
	android:key="active_display"	
	android:fragment="com.android.settings.beanstalk.ActiveDisplaySettings"	
	android:title="@string/ad_settings_title"	
	android:summary="@string/ad_settings_summary" />

    <!-- App Circle Bar -->	
    <PreferenceScreen
        android:icon="@drawable/ic_aicp_sidebar"    
	android:key="app_circle_bar"	
	android:fragment="com.android.settings.beanstalk.AppCircleBar"	
	android:title="@string/app_circle_bar_title" />

    <!-- Driving mode -->
    <PreferenceScreen
        android:icon="@drawable/ic_settings_driving"    
	android:key="interface_voice_tts"
	android:title="@string/voice_tts_title"
	android:summary="@string/voice_tts_summary"
        android:fragment="com.android.settings.beanstalk.TtsNotification" />

    <!-- Edge Swipe Navigation -->
    <PreferenceScreen
        android:icon="@drawable/ic_settings_gesture_anywhere"    
	android:key="edge_swipe_navigation"
	android:fragment="com.android.settings.cyanogenmod.EdgeSwipeNavigation"
	android:title="@string/edge_swipe_title" />

    <!-- Gesture Anywhere -->
    <PreferenceScreen
        android:icon="@drawable/ic_settings_gesture_anywhere"    
        android:key="gesture_anywhere"
        android:fragment="com.android.settings.chameleonos.labs.gestureanywhere.GestureAnywhereSettings"
        android:title="@string/gesture_anywhere_title" />

    <!-- HALO -->
    <PreferenceScreen
        android:icon="@drawable/ic_settings_halo"    
        android:id="@+id/halo_settings"
        android:fragment="com.android.settings.beanstalk.Halo"
        android:title="@string/halo_settings_title" />

    <!-- Heads Up -->
    <PreferenceScreen
        android:icon="@drawable/ic_settings_advanced"    
	android:key="headsup_settings"
	android:id="@+id/headsup_settings"
	android:title="@string/heads_up_title"
	android:summary="@string/heads_up_summary"
	android:fragment="com.android.settings.beanstalk.HeadsUp" />

    <!-- Hover -->
    <PreferenceScreen
        android:icon="@drawable/ic_settings_interface"    
        android:id="@+id/hover_settings"
        android:fragment="com.android.settings.beanstalk.HoverSettings"
        android:title="@string/hover_settings_title" />

    <!-- PA Pie control -->
    <PreferenceScreen
        android:icon="@drawable/ic_aicp_pie"    
	android:key="pa_pie_control"
	android:fragment="com.android.settings.liquid.Pie"
	android:summary="@string/pa_pie_controls_summary"
	android:title="@string/pa_pie_controls_title" />

    <!-- Slim Pie control -->
    <PreferenceScreen
        android:icon="@drawable/ic_settings_theme"    
        android:key="pie_settings"
        android:fragment="com.android.settings.beanstalk.PieControl"
        android:title="@string/pie_control_title" />

    <!-- Shake Events -->
    <PreferenceScreen
        android:icon="@drawable/ic_settings_privacy"    
        android:key="shake_events"
        android:fragment="com.android.settings.beanstalk.ShakeEvents"
        android:title="@string/shake_events_title" />

</PreferenceScreen>
